{
    "agent": "trpo_agent",
    "episodes": 5000,
    "max_timesteps": 200,

    "log_level": "info",

    "batch_size": 4000,
    "learning_rate": 1e-2,

    "discount": 0.99,
    "normalize_rewards": false,
    "entropy_regularization": null,
    "gae_lambda": null,
    "likelihood_ratio_clipping": null,

    "baseline_mode": "states",
    "baseline": {
        "type": "mlp",
        "sizes": [32, 32]
    },
    "baseline_optimizer": {
        "type": "multi_step",
        "optimizer": {
            "type": "adam",
            "learning_rate": 2e-4
        },
        "num_steps": 5
    },

    "network": [
        {
            "type": "dense",
            "size": 32,
            "activation": "tanh"
        },
        {
            "type": "dense",
            "size": 32,
            "activation": "tanh"
        }
    ]
}
