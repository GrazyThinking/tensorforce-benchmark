{
    "agent": "ppo_agent",
    "episodes": 2500,
    "max_timesteps": 200,

    "log_level": "info",

    "batch_size": 4000,
    "step_optimizer": {
        "type": "adam",
        "learning_rate": 1e-2
    },
    "optimization_steps": 5,

    "discount": 0.99,
    "normalize_rewards": false,
    "entropy_regularization": 1e-2,
    "gae_lambda": null,
    "likelihood_ratio_clipping": 0.2,

    "baseline_mode": "states",
    "baseline": {
      "type": "mlp",
      "sizes": [32, 32]
    },
    "baseline_optimizer": {
        "type": "multi_step",
        "optimizer": {
            "type": "adam",
            "learning_rate": 2e-4
        },
        "num_steps": 5
    },
     
    "network": [
        {
            "type": "dense",
            "size": 32,
            "activation": "tanh"
        },
        {
            "type": "dense",
            "size": 32,
            "activation": "tanh"
        }
    ]
}
