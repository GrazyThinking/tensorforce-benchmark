{
    "agent": "ppo_agent",
    "max_episodes": 200,
    "max_episode_timesteps": 200,

    "log_level": "info",

    "batch_size": 2048,
    "step_optimizer": {
        "type": "adam",
        "learning_rate": 1e-3
    },
    "optimization_steps": 2,

    "discount": 0.99,
    "normalize_rewards": true,
    "entropy_regularization": 0.0,
    "gae_lambda": 0.95,
    "likelihood_ratio_clipping": 0.2,

    "baseline_mode": "states",
    "baseline": {
      "type": "mlp",
      "sizes": [64, 64]
    },
    "baseline_optimizer": {
        "type": "multi_step",
        "optimizer": {
            "type": "adam",
            "learning_rate": 2e-4
        },
        "num_steps": 5
    },
     
    "network": [
        {
            "type": "dense",
            "size": 64,
            "activation": "tanh"
        },
        {
            "type": "dense",
            "size": 64,
            "activation": "tanh"
        }
    ]
}
